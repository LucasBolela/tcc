{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Eagle Web Service",
        "type": "python",
        "request": "launch",
        "program": "${workspaceFolder}/manage.py",
        "env": {
          "PYTEST_ADDOPTS": "--no-cov"
        },
        "args": [
          "runserver",
          "localhost:8000"
        ],
        "django": true
      },
      {
        "name": "Debug Tests",
        "type": "python",
        "request": "test",
        "console": "integratedTerminal",
        "env": {
          "PYTEST_ADDOPTS": "--no-cov"
        }
      }
    ]
}
